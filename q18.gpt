/*
18. Faça um algoritmo que receba a idade de 75 pessoas e mostre mensagem informando
"maior de idade" e "menor de idade" para cada pessoa. Considere a idade a partir de 18 anos
como maior de idade.
*/

algoritmo idade_75_pessoas;

variáveis
     continue: caractere;
     i, idade: inteiro;
fim-variáveis

início

    continue:= 'y';

    enquanto continue <> 'n' faça

        para i de 1 até 75 passo 1 faça        

            imprima("Digite a idade da pessoa de número ", i);
            idade:= leia();

            se idade >= 18 então
                imprima("maior de idade");
            senão
                imprima("menor de idade");
            fim-se


        fim-para

        imprima("Deseja continuar? (y/n)");
        continue:= leia();

    fim-enquanto

fim
