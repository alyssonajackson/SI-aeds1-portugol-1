/*
1.Faça um algoritmo que receba dois números e exiba o resultado da sua soma.
*/

algoritmo soma_2_numeros;

variáveis
    continue: caractere;
    a, b: real;
fim-variáveis

início
    continue:= 1;

    enquanto continue <> 'n' faça

        imprima ("Digite o primeiro valor a ser somado: ");
        a:= leia();
        imprima ("Digite o segundo valor a ser somado: ");
        b:= leia();

        imprima("O resultado da soma é: ", a+b);

        imprima("Deseja continuar? (y/n)");
        continue:= leia();

    fim-enquanto
fim
