/*
6. Ler dois valores para as variáveis A e B, e efetuar as trocas dos valores de forma que a
variável A passe a possuir o valor da variável B e a variável B passe a possuir o valor da variável
A. Apresentar os valores trocados.
*/

algoritmo troca_de_valores_variaveis;

variáveis
    continue: caractere;
    a, b, aux: inteiro;
fim-variáveis

início

    continue:= 'y';

    enquanto continue <> 'n' faça

        imprima("Informe um valor (inteiro) para a variável A: ");
        a:= leia();

        imprima("Informe um valor (inteiro) para a variável B: ");
        b:= leia();

        //troca de valores nas variáveis
        aux:= a;
        a:= b;
        b:= aux;

        imprima("Os valoes foram trocados: ");
        imprima("A: ", a);
        imprima("B: ", b);

        imprima("Deseja continuar? (y/n)");
        continue:= leia();

    fim-enquanto

fim
